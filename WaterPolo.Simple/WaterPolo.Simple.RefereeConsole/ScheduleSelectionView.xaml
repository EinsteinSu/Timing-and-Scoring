<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WaterPolo.Simple.RefereeConsole"
    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
    x:Class="WaterPolo.Simple.RefereeConsole.ScheduleSelectionView"
    mc:Ignorable="d"
    xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
    d:DesignHeight="300" d:DesignWidth="300">
    <dxmvvm:Interaction.Behaviors>
        <dxmvvm:EventToCommand Command="{Binding LoadCommand}" EventName="Loaded" />
    </dxmvvm:Interaction.Behaviors>
    <!--<mvvm:Interaction.Triggers>
        <mvvm:EventToCommand Command="{Binding LoadCommand}" EventName="{Loaded}"/>
    </mvvm:Interaction.Triggers>-->
    <Grid>
        <dxe:ListBoxEdit ItemsSource="{Binding Schedules}"
                         EditValue="{Binding SelectedSchedule,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}">
            <dxe:ListBoxEdit.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*"></ColumnDefinition>
                            <ColumnDefinition Width="3*"></ColumnDefinition>
                            <ColumnDefinition Width="2*"></ColumnDefinition>
                            <ColumnDefinition Width="2*"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="{Binding Name}" Margin="5"/>
                        <TextBlock Grid.Column="1" Margin="5" Text="{Binding StartTime, StringFormat=Date: {0:yyyy-MM-dd}}" />
                        <TextBlock Grid.Column="2" Margin="5" Text="{Binding TeamA.Team.Name}" />
                        <TextBlock Grid.Column="3" Margin="5" Text="{Binding TeamB.Team.Name}" />
                    </Grid>
                </DataTemplate>
            </dxe:ListBoxEdit.ItemTemplate>
        </dxe:ListBoxEdit>
    </Grid>
</UserControl>