<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
xmlns:dxwui="http://schemas.devexpress.com/winfx/2008/xaml/windowsui" x:Class="WaterPolo.Crud.Test.EditTestView"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Edit test view"/>
        <dxwui:AppBar Grid.Row="1" Alignment="Bottom" HideMode="AlwaysVisible">
            <dxwui:AppBarButton Content="New" Label="Button" Glyph="Icons/Check.png"/>
            <dxwui:AppBarButton Content="Save" Label="Button" Glyph="Icons/Home.png"/>
            <dxwui:AppBarSeparator />
            <dxwui:AppBarButton Content="Save" Label="Button" Glyph="Icons/Home.png"/>
        </dxwui:AppBar>
        <StackPanel Grid.Row="2">
            <Button Content="button1"/>
            <Button Content="button1"/>
            <Button Content="button1"/>
            <Button Content="button1"/>
        </StackPanel>
    </Grid>
</UserControl>
