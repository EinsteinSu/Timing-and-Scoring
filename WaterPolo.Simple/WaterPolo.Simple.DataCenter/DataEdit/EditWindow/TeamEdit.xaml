<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WaterPolo.Simple.DataCenter.DataEdit.EditWindow"
             xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol" xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors" x:Class="WaterPolo.Simple.DataCenter.DataEdit.EditWindow.TeamEdit"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <dxlc:LayoutControl>
            <dxlc:LayoutGroup Orientation="Vertical">
                <dxlc:LayoutItem Label="Flag" Height="100">
                    <dxe:ImageEdit EditValue="{Binding Data.Flag}"/>
                </dxlc:LayoutItem>
                <dxlc:LayoutItem Label="Name">
                    <dxe:TextEdit EditValue="{Binding Data.Name}"/>
                </dxlc:LayoutItem>
                <dxlc:LayoutItem Label="Display Name">
                    <dxe:TextEdit EditValue="{Binding Data.DisplayName}"/>
                </dxlc:LayoutItem>
            </dxlc:LayoutGroup>
        </dxlc:LayoutControl>
    </Grid>
</UserControl>
